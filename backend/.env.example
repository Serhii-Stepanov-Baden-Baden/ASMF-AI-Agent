# ==============================================================================
# ASMF AI AGENT - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and update with your actual values

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=*

# ==============================================================================
# GOOGLE DRIVE API CONFIGURATION
# ==============================================================================
# Get these from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id
GOOGLE_DRIVE_ROOT_FOLDER_ID=your-root-folder-id

# ==============================================================================
# ASMF MEMORY CONFIGURATION
# ==============================================================================
# Memory retention and limits
MEMORY_RETENTION_DAYS=365
CONTEXT_LAYER_LIMIT=1000
SEMANTIC_LAYER_LIMIT=5000
TEMPORAL_LAYER_LIMIT=10000

# Importance thresholds
IMPORTANCE_THRESHOLD=0.7
EMOTION_THRESHOLD=0.5
TRAINING_THRESHOLD=0.6

# Memory maintenance
AUTO_COMPRESS_ENABLED=true
COMPRESS_INTERVAL_HOURS=24
MAX_CONTEXT_AGE_HOURS=2
MAX_SEMANTIC_AGE_DAYS=30

# ==============================================================================
# AI AGENT CONFIGURATION
# ==============================================================================
# Default settings
DEFAULT_PERSONALITY=friendly
MEMORY_ENABLED=true
MAX_RESPONSE_LENGTH=500

# Personality modes
FRIENDLY_MODE_ENABLED=true
INTELLIGENT_MODE_ENABLED=true
TEACHER_MODE_ENABLED=true
CREATIVE_MODE_ENABLED=true
ANALYTICAL_MODE_ENABLED=true

# Response generation
CONFIDENCE_THRESHOLD=0.6
RESPONSE_CREATIVITY=0.7
CONTEXT_RELEVANCE_THRESHOLD=0.4

# ==============================================================================
# TRAINING CONFIGURATION
# ==============================================================================
# File processing
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,txt,docx,md,csv
TRAINING_BATCH_SIZE=10

# Knowledge extraction
KNOWLEDGE_EXTRACTION_ENABLED=true
ENTITY_EXTRACTION_ENABLED=true
RELATIONSHIP_EXTRACTION_ENABLED=true
TOPIC_MODELING_ENABLED=true

# Learning parameters
LEARNING_RATE=0.001
ADAPTIVE_LEARNING=true
KNOWLEDGE_RETENTION_DAYS=365

# ==============================================================================
# API SECURITY
# ==============================================================================
# Rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=900000

# Security headers
HELMET_ENABLED=true
CORS_ENABLED=true
CSRF_PROTECTION=false

# Authentication (optional)
API_KEY_ENABLED=false
API_KEY_REQUIRED=false
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=24h

# ==============================================================================
# MONITORING AND LOGGING
# ==============================================================================
# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE_PATH=./logs/asmf-ai-agent.log

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true
MEMORY_USAGE_MONITORING=true
CPU_USAGE_MONITORING=true
RESPONSE_TIME_MONITORING=true

# Health checks
HEALTH_CHECK_INTERVAL_SECONDS=60
HEALTH_CHECK_TIMEOUT_MS=5000

# ==============================================================================
# BACKUP AND RECOVERY
# ==============================================================================
# Automatic backup
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Google Drive backup
DRIVE_BACKUP_ENABLED=true
DRIVE_SYNC_INTERVAL_MINUTES=30
DRIVE_MAX_RETRIES=3

# ==============================================================================
# ADVANCED FEATURES
# ==============================================================================
# Emotion detection
EMOTION_DETECTION_ENABLED=true
EMOTION_ANALYSIS_DEPTH=medium

# Sentiment analysis
SENTIMENT_ANALYSIS_ENABLED=true
SENTIMENT_THRESHOLDS=negative:-0.3,neutral:0,positive:0.3

# Multi-language support
MULTI_LANGUAGE_ENABLED=true
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,de,fr,es

# Neural network configuration
NEURAL_NETWORK_ENABLED=true
NEURAL_NETWORK_HIDDEN_LAYERS=2
NEURAL_NETWORK_LEARNING_RATE=0.01

# ==============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ==============================================================================
# If using external database instead of Google Drive
DB_ENABLED=false
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=asmf_ai_agent
DB_USER=username
DB_PASSWORD=password
DB_SSL_ENABLED=false

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Debug mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Hot reload for development
HOT_RELOAD_ENABLED=false

# Testing
TEST_MODE_ENABLED=false
MOCK_GOOGLE_DRIVE=false
MOCK_AI_RESPONSES=false
